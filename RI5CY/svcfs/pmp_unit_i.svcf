#
# Preferences
#
preferences set toolbar-SimControl-WatchList {
  usual
  hide set_break
  hide vplan
}
preferences set exportdlg-csvXsub 0
preferences set plugin-enable-svdatabrowser-new 1
preferences set exportdlg-csvRadix bin
preferences set exportdlg-csvDelayUnits ps
preferences set exportdlg-startFormat csv
preferences set exportdlg-csvPeriod 40
preferences set exportdlg-file aes.regfile
preferences set toolbar-OperatingMode-WaveWindow {
  usual
  position -pos 4
  name OperatingMode
}
preferences set exportdlg-rangeTo 193940
preferences set exportdlg-csvXsubEnable 1
preferences set plugin-enable-groupscope 0
preferences set plugin-enable-interleaveandcompare 0
preferences set exportdlg-csvTrigger period
preferences set exportdlg-csvPeriodUnits ns
preferences set exportdlg-csvOutputUnits ns
preferences set exportdlg-rangeFrom 20

#
# Databases
#
array set dbNames ""
set dbNames(realName1) [ database require sha.gate -ask yes -hints {
	file ./sha.gate.trn
	file sha.gate.trn
}]
if {$dbNames(realName1) == ""} {
    set dbNames(realName1) {"sha.gate"}
}

#
# Mnemonic Maps
#
mmap new -reuse -name {Boolean as Logic} -radix %b -contents {{%c=FALSE -edgepriority 1 -shape low}
{%c=TRUE -edgepriority 1 -shape high}}
mmap new -reuse -name {Example Map} -radix %x -contents {{%b=11???? -bgcolor orange -label REG:%x -linecolor yellow -shape bus}
{%x=1F -bgcolor red -label ERROR -linecolor white -shape EVENT}
{%x=2C -bgcolor red -label ERROR -linecolor white -shape EVENT}
{%x=* -label %x -linecolor gray -shape bus}}

#
# Waveform windows
#
if {[catch {window new WaveWindow -name "Waveform 1" -geometry 1920x1016+117+83}] != ""} {
    window geometry "Waveform 1" 1920x1016+117+83
}
window target "Waveform 1" on
waveform using {Waveform 1}
waveform sidebar select designbrowser
waveform set \
    -primarycursor TimeA \
    -signalnames name \
    -signalwidth 175 \
    -units ns \
    -valuewidth 75
waveform baseline set -time 12,212,594,837ps

set id [waveform add -signals [subst  {
	{$dbNames(realName1)::[format {tb.top_i.core_region_i.\CORE.RISCV_CORE .pmp_unit_i.data_addr_i[31:0]}]}
	{$dbNames(realName1)::[format {tb.top_i.core_region_i.\CORE.RISCV_CORE .pmp_unit_i.instr_addr_i[31:0]}]}
	} ]]

waveform xview limits 0 4128320ns
waveform set -signalfilterentry *_i
waveform set -signalfilterentry *inst*
waveform set -signalfilterentry *ialu_ope*
waveform set -signalfilterentry *alu_ope*
waveform set -signalfilterentry *mult*
waveform set -signalfilter *pc*

